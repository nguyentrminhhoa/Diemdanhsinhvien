<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:id="@+id/relativeLayout2"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:id="@+id/relativeLayout3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="TRƯỜNG ĐẠI HỌC CẦN THƠ"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="KHOA CNTT VÀ TRUYỀN THÔNG"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


        <TextView
            android:id="@+id/sinhvien"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="SINH VIÊN"
            android:textColor="@color/red"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="41dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:id="@+id/tvGT"
            android:layout_alignBottom="@+id/tvTenLop"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:id="@+id/tvName"
            android:textSize="20dp"
            android:hint="Nguyễn Trần Minh Hòa"
            android:textStyle="bold"
            android:background="@null"
            android:cursorVisible="false"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/tvMaSV" />

        <ImageView
            android:id="@+id/tvqr"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:id="@+id/tvMaSV"
            android:hint="1310395"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/tvName"
            android:layout_toStartOf="@+id/tvqr" />
        <EditText
            android:id="@+id/tvNamSinh"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:hint="12/12/2018"
            android:background="@null"
            android:cursorVisible="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/tvMaSV"
            android:layout_alignStart="@+id/tvMaSV" />
        <EditText
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:hint="DI13Z6A1"
            android:textSize="20dp"
            android:background="@null"
            android:cursorVisible="false"
            android:textStyle="bold"
            android:id="@+id/tvTenLop"
            android:layout_below="@+id/tvNamSinh"
            android:layout_alignStart="@+id/tvNamSinh" />
        <EditText
            android:background="@null"
            android:cursorVisible="false"
            android:id="@+id/test"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_above="@+id/tvGT"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Cập Nhật" />

    <Button
        android:id="@+id/btnIn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Xuất Thẻ"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Quay Lại" />

    <Button
        android:id="@+id/btninall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCapNhat"
        android:layout_alignParentStart="true"
        android:text="In All" />


</RelativeLayout>